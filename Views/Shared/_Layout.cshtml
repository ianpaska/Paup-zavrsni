    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - GameShop3</title>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/Site.css" rel="stylesheet" />
        <style>
           
        </style>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="Background"></div>
        @* background *@
        <div class="Background" style="
             position:fixed; top:0; left:0; width:100%; height:100%;
             background-image:url('@Url.Content("~/Content/Images/background.jpg")');
             background-size:cover; background-position:center; background-repeat:no-repeat; z-index:-1;">
        </div>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Content/Images/logo.jpg" alt="GameShop" />
                    GameShop
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="mainNavbar">
                    @* LIJEVA STRANA *@
                    <ul class="navbar-nav">
                        <li>@Html.ActionLink("Početna", "Index", "Home", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Igre", "Index", "Games", null, new { @class = "nav-link" })</li>
                        @if (Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Moji računi", "MyInvoices", "Orders", null, new { @class = "nav-link" })</li>
                            if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Svi računi", "AllInvoices", "Orders", null, new { @class = "nav-link" })</li>
                            }
                        }
                    </ul>

                    @* login/logout *@
                    <ul class="navbar-nav navbar-right">
                        <li class="navbar-login">
                            @if (Request.IsAuthenticated)
                            {
                                @Html.ActionLink("Odjava", "LogOff", "Account", null, new { @class = "btn btn-link navbar-btn" })
                            }
                            else
                            {
                                @Html.ActionLink("Prijava", "Login", "Account", null, new { @class = "btn btn-primary navbar-btn" })
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        @* BACK BUTTON *@
        <a href="javascript:history.back()" class="back-button">&#8592; Nazad</a>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - GameShop3</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
    </html>
